ETCD_NAME={{ inventory_hostname }}
ETCD_LISTEN_PEER_URLS="https://{{ ansible_default_ipv4.address }}:2380"
ETCD_LISTEN_CLIENT_URLS="https://{{ ansible_default_ipv4.address }}:2379"
ETCD_INITIAL_CLUSTER_TOKEN="etcd-cluster"
ETCD_INITIAL_CLUSTER="{% for h in groups[g_name] %}{{ hostvars[h].ansible_hostname }}=https://{{ hostvars[h].ansible_hostname }}{{ BASEDOMAIN }}:2380{% if not loop.last %},{% endif %}{% endfor %}"
ETCD_ADVERTISE_CLIENT_URLS="https://{{ inventory_hostname }}{{ BASEDOMAIN }}:2379"
ETCD_TRUSTED_CA_FILE=/etc/etcd/etcd-ca.crt
ETCD_CERT_FILE="/etc/etcd/server.crt"
ETCD_KEY_FILE="/etc/etcd/server.key"
ETCD_PEER_CLIENT_CERT_AUTH=true
ETCD_PEER_TRUSTED_CA_FILE=/etc/etcd/etcd-ca.crt
ETCD_PEER_KEY_FILE=/etc/etcd/server.key
ETCD_PEER_CERT_FILE=/etc/etcd/server.crt